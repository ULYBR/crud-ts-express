{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "inlineSources": false,
    "strict": true,
    "target": "es2016",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "removeComments": false,
    "rootDir": "./",
    "outDir": "dist",
  },
  "include": [
    "src/**/*"
  ]
}